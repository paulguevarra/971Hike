{{#partial "navtabs"}}
    <div class="navlogo">
        <ul class="nav nav-tabs">
            <li role="presentation"><a href="/">Home</a></li>
            <li role="presentation" ><a href="/trails/new">Find a trail</a></li>
            <li role="presentation"><a href="/trails">See all trails</a></li>
            <img src="/images/mthood-logo-med-cropped.png" alt="Mountain logo">
        </ul>
    </div>
{{/partial}}

{{#partial "content"}}

    <div class="well">

        {{#if editUser}}
            <h2 class="special">Update a user</h2>
            <form action="/users/{{editUser.id}}/update" method="post">
                <div class="form-group">
                    <label for="name">User name: </label>
                    <input id="name" name="name" type="text" value="{{editUser.username}}" required>
                </div>
                <div class = "form-group">
                    <label for="location">Location: </label>
                    <input id="location" name="location" type="text" value="{{editUser.userlocation}}" required>
                </div>
                <div class = "form-group">
                    <label for="distance">Maximum distance you want to hike: </label>
                    <input id="distance" name="distance" type="number" value="{{editUser.maxDistance}}" required>
                </div>

        {{else}}
            <h2 class="special">Create your account!</h2>
            <form action="/users" method="post">
                <div class="form-group">
                    <label for="name">User name: </label>
                    <input id="name" name="name" type="text" required>
                </div>
                <div class = "form-group">
                    <label for="location">Location: </label>
                    <input id="location" name="location" type="text" required>
                </div>
                <div class = "form-group">
                    <label for="distance">Maximum distance you want to hike: </label>
                    <input id="distance" name="distance" type="number" required>
                </div>

        {{/if}}
            <button type="submit" class="btn btn-success">Submit</button>
        </form>
    </div>



{{/partial}}

{{>layout.hbs}}