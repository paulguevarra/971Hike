{{#partial "navtabs"}}
    <div class="navlogo">
        <ul class="nav nav-tabs">
            <li role="presentation"><a href="/">Home</a></li>
            <li role="presentation"><a href="/trails/new">Find a trail</a></li>
            <li role="presentation"><a href="/trails">See all trails</a></li>
            <img src="/images/mthood-logo-med-cropped.png" alt="Mountain logo">
        </ul>
    </div>
{{/partial}}

{{#partial "content"}}
    <div class="well narrow-well">

        <h2 class="special">{{foundTrail.trailName}}</h2>
        <ul>
            <li>Difficulty: {{foundTrail.difficulty}}</li>
            <li>Location: {{foundTrail.location}}</li>
            <!--<li>Latitude: {{foundTrail.latitude}}</li>-->
            <!--<li>Longitude: {{foundTrail.longitude}}</li>-->
            <li>Distance: {{foundTrail.distance}}</li>
        </ul>

    <p><a href="/trails/{{foundTrail.id}}/update"><span class="glyphicon glyphicon-pencil" aria-hidden="true">edit</span></a></p>

    <p><a href="/trails/{{foundTrail.id}}/journals/new"><input type="button" id="create-log" class="btn btn-success center-block" value="Create an adventure log!"></a></p>

    </div>

    {{#if journals}}
        {{#each journals}}
            <div class="panel panel-info narrow-well">
                <div class="panel-heading">
                    <h3 class="panel-title">{{createdAt}}</h3>
                </div>
                <div class="panel-body">
                    <h5>My thoughts:</h5>
                    <p>{{notes}}</p>
                    <h5>Details:</h5>
                    <ul>
                        <li>Best season: {{bestSeason}}</li>
                        <li>Hiked it yet: {{didTheHike}}</li>
                    </ul>
                    <p><a href="/journals/{{id}}/update"><span class="glyphicon glyphicon-pencil" aria-hidden="true">edit</span></a></p>
                </div>
            </div>
        {{/each}}
    {{else}}
        <div class="well narrow-well">
            <p>No journals yet.</p>
        </div>
    {{/if}}


{{/partial}}

{{>layout.hbs}}