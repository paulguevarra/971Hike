{{#partial "navtabs"}}
    <div class="navlogo">
        <ul class="nav nav-tabs">
            <li role="presentation"><a href="/">Home</a></li>
            <li role="presentation" class="active"><a href="/trails/new">Find a trail</a></li>
            <li role="presentation"><a href="/trails">See all trails</a></li>
            <img src="/images/mthood-logo-med-cropped.png" alt="Mountain logo">
        </ul>
    </div>
{{/partial}}

{{#partial "content"}}

   <div id="trail-form" class="row">
       <div class="col-lg-3">
            <div id="trail-add" class="well">
            {{#if editTrail}}
                <h2 class="special">Update a trail</h2>
                <p><a href="/trails/{{editTrail.id}}/delete">Delete this trail</a></p>
                <form action="/trails/{{editTrail.id}}/update" method="post">
                    <div class="form-group">
                        <label for="name">Trail name: </label>
                        <input id="name" name="name" type="text" value="{{editTrail.trailName}}" required>
                    </div>
                    <div class = "form-group">
                        <label for="difficulty">Difficulty (1-10): </label>
                        <input id="difficulty" name="difficulty" type="number" min="1" max="10" value="{{editTrail.difficulty}}" required>
                    </div>
                    <div class = "form-group">
                        <label for="location">Location: </label>
                        <input id="location" name="location" type="text" value="{{editTrail.location}}" required>
                    </div>
                    <div class = "form-group">
                        <label for="distance">Distance: </label>
                        <input id="distance" name="distance" type="decimal" step="0.01" value="{{editTrail.distance}}" required>
                    </div>


            {{else}}
                <h2 class="special">Add a new trail!</h2>
                <form action="/trails" method="post">
                    <div class = "form-group">
                        <label for="name">Trail name: </label>
                        <input id="name" name="name" type="text" required>
                    </div>
                    <div class = "form-group">
                        <label for="difficulty">Difficulty (1-10): </label>
                        <input id="difficulty" name="difficulty" type="number" min="1" max="10" required>
                    </div>
                    <div class = "form-group">
                        <label for="location">Location: </label>
                        <input id="location" name="location" type="text" required>
                    </div>
                    <div class = "form-group">
                        <label for="distance">Distance: </label>
                        <input id="distance" name="distance" type="number" step="0.01" required>
                    </div>

            {{/if}}
                    <button type="submit" class="btn btn-success">Submit</button>
                    <a href="/trails/random"><input type="button" class="btn btn-info" value="Surprise me!"></a>
                </form>
            </div>
       </div>
       <div class="col-lg-9">
           <!-- BEGIN Hiking Project -->
           <iframe style="width:100%; max-width:1200px; height:500px;" frameborder="0" scrolling="no" src="https://www.hikingproject.com/widget/map?favs=1&location=fixed&x=-13658628&y=5708409&z=7.6&h=500"></iframe>
           <!-- END Hiking Project -->

       </div>
   </div>

{{/partial}}

